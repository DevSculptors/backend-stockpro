// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum type_doc_domain {
  CC
  CE
  NIT
  TI
  PP
}

model Person{
  id String @id @default(uuid())
  id_document String
  type_document type_doc_domain 
  name String
  last_name String
  phone String
  user User[]
  sales Sale[]
  inventory_purchases Inventory_Purchase[]
}

model User{
  id String @id @default(uuid())
  username String @unique
  password String
  isActive Boolean @default(true)
  email String @unique
  person Person @relation(fields: [personId], references:  [id])
  personId String
  roles_user Role_User[]
  turns Turn[]
  sales Sale[]
  inventory_purchases Inventory_Purchase[]
}

model Role{
  id String @id @default(uuid())
  name String
  description String
  roles_user Role_User[] 
}

model Role_User{
  id String @id @default(uuid())
  user User @relation(fields: [id_user], references: [id])
  id_user String
  role Role @relation(fields: [id_role], references: [id])
  id_role String
}

model Turn {
  id String @id @default(uuid())
  date_time DateTime
  cash Decimal
  is_open Boolean
  withdrawals Withdrawal[]
  user User @relation(fields: [id_user], references: [id])
  id_user String
  cash_register Cash_Register @relation(fields: [id_cash_register], references: [id])
  id_cash_register String
}

model Withdrawal{
  id String @id @default(uuid())
  turn Turn @relation(fields: [id_turn], references: [id])
  id_turn String 
  withdrawal_date DateTime
  value Decimal
}

model Cash_Register{
  id String @id @default(uuid())
  name String
  location String
  turns Turn[]
}

model Sale{
  id String @id @default(uuid())
  date_sale DateTime
  price_sale Decimal
  person Person @relation(fields: [id_client], references: [id])
  id_client String
  user User @relation(fields: [id_user], references: [id])
  id_user String
  oders Order_Sale []
}

model Product{
  id String @id @default(uuid())
  name_product String
  description String
  measure_unit Measure
  sale_price Decimal
  stock Int
  category Category_Product @relation(fields: [id_category], references: [id])
  id_category Int
  brand Brand_product @relation(fields: [id_brand], references: [id])
  id_brand String
  oders Order_Sale []
  purchases Purchase_Detail []
  sales_records Sale_Record[]
}

model Order_Sale{
  id String @id @default(uuid())
  amount_product Int
  price Decimal
  product Product @relation(fields: [id_product], references: [id])
  id_product String
  sale Sale @relation(fields: [id_sale], references: [id])
  id_sale String
}

enum Measure {
  KG
  UNITS
  LITERS
  POUNDS
}

model Inventory_Purchase{
  id String @id @default(uuid())
  date_purchase DateTime
  person Person @relation(fields: [id_provider], references: [id])
  id_provider String
  user User @relation(fields: [id_user], references: [id])
  id_user String
  purchase_detail Purchase_Detail[]
  sale_records Sale_Record[]
}

model Purchase_Detail{
  id String @id @default(uuid())
  quantity Int
  due_date DateTime
  purchase_unit_price Decimal
  inventory_purchase Inventory_Purchase @relation(fields: [id_purchase], references: [id])
  id_purchase String
  product Product @relation(fields: [id_product], references: [id])
  id_product String
}

model Sale_Record{
  id Int @id @default(autoincrement())
  sale_price Decimal
  update_date DateTime
  inventory_purchase Inventory_Purchase @relation(fields: [id_purchase], references: [id])
  id_purchase String
  product Product @relation(fields: [id_product], references: [id]) 
  id_product String
}

model Brand_product{
  id String @id @default(uuid())
  name String
  is_active Boolean @default(true)
  description String
  products Product[]
}

model Category_Product{
  id Int @id @default(autoincrement())
  name String
  is_active Boolean @default(true)
  description String
  products Product[]
}

